<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


      <RelativeLayout
          android:paddingTop="60dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:paddingBottom="8dp"
          android:background="@color/white"
          android:layout_marginTop="50dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true">
          <LinearLayout

              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true">

              <TextView
                  android:textColor="@color/black"
                  android:textSize="12sp"
                  android:gravity="center"
                  android:text="充会员更优惠还送豪礼，单期购买需要9.9元"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/pay_single"
                  android:textSize="12sp"
                  android:padding="6dp"
                  android:textColor="@color/white"
                  android:background="#DE377D"
                  android:layout_marginTop="8dp"
                  android:gravity="center"
                  android:text="购买单张专辑"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/pay_vip"
                  android:textSize="12sp"
                  android:padding="6dp"
                  android:textColor="@color/white"
                  android:background="#DE377D"
                  android:layout_marginTop="8dp"
                  android:gravity="center"
                  android:text="我要当爷（VIP)"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />



              <LinearLayout

                  android:layout_marginTop="8dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:padding="6dp"
                      android:id="@+id/collection"
                      android:gravity="center"
                      android:background="#DE377D"
                      android:textSize="12sp"
                      android:text="收藏"
                      android:textColor="@color/white"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />
                  <TextView
                      android:padding="6dp"
                      android:id="@+id/cancle"
                      android:layout_marginLeft="4dp"
                      android:gravity="center"
                      android:background="#7D808B"
                      android:textSize="12sp"
                      android:text="再看看"
                      android:textColor="@color/white"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />
              </LinearLayout>
          </LinearLayout>


      </RelativeLayout>

    <ImageView
        android:id="@+id/pay_back"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vip_pop_top"

        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>