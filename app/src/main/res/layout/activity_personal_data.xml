<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mayinews.g.user.activity.PersonalDataActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devider" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/headView"
                android:layout_width="120dp"
                android:src="@drawable/default_icon"

                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                app:civ_border_color="@color/transparent"
                app:civ_border_width="1dp"
                app:civ_fill_color="@color/pressed_false_green" />


            <LinearLayout

                android:gravity="center_vertical"
                android:background="@color/devider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/icon_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                 <EditText
                     android:textCursorDrawable="@drawable/edit_cursor"
                     android:id="@+id/et_nickname"
                     android:background="@null"
                     android:gravity="center_vertical"
                     android:textSize="14sp"
                     android:layout_marginLeft="6dp"
                     android:hint="昵称"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginRight="6dp"
                    android:id="@+id/clear"
                    android:src="@drawable/clear_img2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:background="@color/devider"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/men_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:id="@+id/tv_sex"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="6dp"
                    android:hint="女"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:background="@color/devider"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/address_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <EditText

                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:id="@+id/et_address"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="6dp"
                    android:hint="收货地址"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/devider"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/photo_logo"
                        android:layout_marginLeft="6dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <EditText
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:background="@null"
                        android:layout_marginLeft="6dp"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:hint="联系电话"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:background="@color/devider"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/wechat_pay"
                        android:layout_marginLeft="6dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:hint="微信号"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_finish"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="完成"
                android:textSize="20sp"
                android:background="@drawable/personal_finish_selector"
                android:textColor="@color/white"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
