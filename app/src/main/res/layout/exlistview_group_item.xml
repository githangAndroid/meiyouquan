<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_six"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image1"
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/desc1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="钻石VIP有效期一年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image3"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/desc3"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="钻石VIP有效期一年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image4"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/desc4"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="钻石VIP有效期一年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image5"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/desc5"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="钻石VIP有效期一年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image6"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/desc6"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="钻石VIP有效期一年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="6dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="钻石VIP"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="所有权限及开放特级'私密区'多个神秘入口，送价值298VR眼镜"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@drawable/auth_code_backgroud"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="¥ 698.0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/open_close"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:text="点击展开"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>